{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Nuxt (SSR)",
      "program": "${workspaceFolder}/node_modules/.bin/nuxt-ts",
      "cwd": "${workspaceRoot}/packages/client",
      "envFile": "${workspaceFolder}/.env",
      "sourceMaps": true,
      "sourceMapPathOverrides": { "webpack:///*": "${workspaceFolder}/packages/client/*" }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Server",
      "args": ["${workspaceFolder}/packages/server/src/index.ts"],
      "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
      "cwd": "${workspaceRoot}/packages/server",
      "envFile": "${workspaceFolder}/.env",
      "sourceMaps": true
    }
  ]
}