{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Nuxt (SSR)",
      "program": "${workspaceFolder}/node_modules/.bin/nuxt-ts",
      "cwd": "${workspaceRoot}/packages/client",
      "envFile": "${workspaceFolder}/.env",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack:///*": "${workspaceFolder}/packages/client/*"
      }
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Nuxt (Chrome)",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/packages/client",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack:///*": "${workspaceFolder}/packages/client/*"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Server",
      "args": [
        "${workspaceFolder}/packages/server/src/index.ts"
      ],
      "runtimeArgs": [
        "--nolazy",
        "-r",
        "ts-node/register"
      ],
      "cwd": "${workspaceRoot}/packages/server",
      "env": {
        "TS_NODE_TRANSPILE_ONLY": true
      },
      "envFile": "${workspaceFolder}/.env",
      "sourceMaps": true
    }
  ],
  "compounds": [
    {
      "name": "Client",
      "configurations": [
        "Nuxt (SSR)",
        "Nuxt (Chrome)"
      ]
    },
    {
      "name": "Client & Server",
      "configurations": [
        "Nuxt (SSR)",
        "Nuxt (Chrome)",
        "Server"
      ]
    }
  ]
}