datasource db {
  provider = "mysql"
  url      = env("PRISMA2_MYSQL_URL")
  default  = true
}

generator photonjs {
  provider = "photonjs"
  output   = "../../node_modules/@generated/photon"
}

enum Role {
  USER
  EDITOR
  ADMINISTRATOR
}

model User {
  id              String  @default(cuid()) @id
  role            Role    @default(USER)
  email           String  @unique
  password        String?
  firstName       String?
  lastName        String?
  githubProfileId String? @unique
}
